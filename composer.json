{
    "name": "yiisoft/aliases",
    "type": "library",
    "description": "Named paths and URLs storage",
    "keywords": [
        "alias"
    ],
    "homepage": "http://www.yiiframework.com/",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yiisoft/aliases/issues?state=open",
        "forum": "http://www.yiiframework.com/forum/",
        "wiki": "http://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii",
        "source": "https://github.com/yiisoft/aliases"
    },
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "infection/infection": "^0.20.1",
        "phpunit/phpunit": "^9.4",
        "vimeo/psalm": "^4.1"
    },
    "autoload": {
        "psr-4": {
            "Yiisoft\\Aliases\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yiisoft\\Aliases\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "config-plugin": {
            "params": "config/params.php",
            "common": "config/common.php"
        }
    },
    "scripts": {
        "test": [
            "phpunit --colors --no-interaction"
        ]
    }
}
